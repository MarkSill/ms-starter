{
	"compilerOptions": {
		"module": "commonjs",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"alwaysStrict": true,
		"target": "es6",
		"resolveJsonModule": true
	},
	"include": ["**/*"],
	"exclude": ["node_modules"]
}
